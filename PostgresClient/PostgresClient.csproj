<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\AppIcon.ico</ApplicationIcon>
    <ImplicitUsings>enable</ImplicitUsings>
    <SupportedOSPlatformVersion>7.0</SupportedOSPlatformVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="AppIcon.png" />
    <None Remove="cat.png" />
    <None Remove="Resources\Fonts\SegoeIcons.ttf" />
    <None Remove="Resources\Fonts\segoeui.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\AppIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\AppIcon.ico">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\AppIcon.png" />
    <Resource Include="AssemblyInfo.cs" />
    <Resource Include="Resources\cat.png" />
    <Resource Include="Resources\Fonts\SegoeIcons.ttf" />
    <Resource Include="Resources\Fonts\segoeui.ttf" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PsqlSharp\PsqlSharp.csproj" />
    <ProjectReference Include="..\SqlApi\SqlApi.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="SqlApi" />
  </ItemGroup>

</Project>
