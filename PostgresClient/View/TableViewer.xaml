<Page x:Class="PostgresClient.View.TableViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostgresClient.View" xmlns:controls="clr-namespace:PostgresClient.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TableViewer"
      >

    <Grid Background="Transparent"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5"   >
            <Label Content="Таблица:" FontSize="15"/>
            <ComboBox FontSize="15" IsDropDownOpen="{Binding IsDropDownOpened}" IsEnabled="{Binding IsConnected}" 
                      SelectedValue="{Binding SelectedTable}" ItemsSource="{Binding Tables}"  MaxWidth="120" BorderThickness="0" Margin="0,0,10,0"/>
            <Button Content="Показать" FontSize="20" IsEnabled="{Binding IsCanShow}" Command="{Binding ShowTable}" Margin="0,0,10,0" />
            <Button Content="Сохранить" FontSize="20" IsEnabled="{Binding IsCanShow}" Command="{Binding ShowTable}" Margin="0,0,10,0"  />

        </StackPanel>


        <controls:ExtendedDataGrid HeadersVisibility="Column"  GridLinesVisibility="None" HorizontalScrollBarVisibility="Disabled" Background="#202020" Margin="5" Padding="5"
                                   FontSize="20" BorderThickness="0" Grid.Row="1"  ColumnWidth="*" VerticalAlignment="Stretch" Visibility="Visible"   ItemsSource="{Binding TableContent}">
        </controls:ExtendedDataGrid>



       
        <!--<controls:ExtendedRichTextBox Grid.Row="1" Padding="5" BorderThickness="0" IsReadOnly="True"  Text="{Binding TableContent, Mode=OneWay}"/>-->
    </Grid>
</Page>
