<Page x:Class="PostgresClient.View.Debugger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostgresClient.View" xmlns:controls="clr-namespace:PostgresClient.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Debugger">

    <Grid>
        <controls:ExtendedRichTextBox PageWidth="1000"  Text="{Binding DebugLog}" AlwaysScrollToEnd="True"  IsReadOnly="True" Opacity="0.7"/>
    </Grid>
</Page>
