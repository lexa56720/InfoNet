<Window x:Class="PostgresClient.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostgresClient.View"
        xmlns:src="clr-namespace:PostgresClient.Utils"
        mc:Ignorable="d"
        Title="MainWindow" Height="900"  Width="1500">
    <Window.Resources>
        <src:InverseBooleanConverter x:Key="boolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="12*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>



        <TabControl Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="Transparent" BorderThickness="0"  Padding="5"  >
            <TabItem Header="Выполнить комманду" >
                <Frame   Content="{Binding WorkFrame}"    BorderThickness="0"  />
            </TabItem>
            <TabItem Header="Вывести содержимое таблицы" IsEnabled="{Binding IsConnected}">
                <Frame   Content="{Binding TableViewerFrame}"    BorderThickness="0"  />
            </TabItem>
        </TabControl>




        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Padding="5" Margin="5" BorderThickness="1" BorderBrush="#707070">
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource BaseButton}">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Content="Инициализировать соеденение"/>
                    <Button Content="Закрыть сеанс связи" IsEnabled="{Binding IsConnected}" Command="{Binding DisconnectClick}"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Padding="5" Margin="5" BorderThickness="1" BorderBrush="#707070">
                <Frame  Content="{Binding SidePanel}" />
            </Border>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Canvas Width="100" Height="100">
                    <Ellipse  Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="25">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="false">
                                        <Setter Property="Fill" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Canvas>
            </Viewbox>
            <Label  Grid.Row="2" Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" >
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Content" Value="Подключено"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsConnected}" Value="false">
                                <Setter Property="Content" Value="Не подключено"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </Grid>

    </Grid>

</Window>
