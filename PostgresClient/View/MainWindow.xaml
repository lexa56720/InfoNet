<Window x:Class="PostgresClient.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostgresClient.View"
        xmlns:src="clr-namespace:PostgresClient.Utils"
        mc:Ignorable="d"
        Title="MainWindow" Height="900"  Width="1500" Background="#282828">
    <Window.Resources>
        <src:InverseBooleanConverter x:Key="boolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="100*"/>
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>



        <TabControl Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Background="Transparent" BorderThickness="0"  Padding="5"  >
            <TabItem Header="Выполнить комманду" >
                <Frame   Content="{Binding WorkFrame}"    BorderThickness="0"  />
            </TabItem>
            <TabItem Header="Вывести содержимое таблицы" IsEnabled="{Binding IsConnected}">
                <Frame   Content="{Binding TableViewerFrame}"    BorderThickness="0"  />
            </TabItem>
            <TabItem Header="Список функций" IsEnabled="{Binding IsConnected}">
                <Frame   Content="{Binding FuncFrame}"    BorderThickness="0"  />
            </TabItem>
        </TabControl>


        <GridSplitter Width="5" Margin="5" Grid.RowSpan="3" HorizontalAlignment="Center" Grid.Column="1"/>

        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" >
                <Button Content="Управление соеденением" Margin="5"/>
                <Button Content="Сохранить дамп" Margin="5"/>
                <Button Content="Загрузить дамп" Margin="5"/>
            </StackPanel>
            <GridSplitter Height="5" Padding="5" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Frame Padding="5" Grid.Row="2"  Content="{Binding SidePanel}" />

        </Grid>

        <Rectangle  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                            <Setter Property="Fill" Value="#388e3c"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsConnected}" Value="false">
                            <Setter Property="Fill" Value="#d32f2f"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>


    </Grid>

</Window>
