<Window x:Class="PostgresClient.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostgresClient.View"
        xmlns:src="clr-namespace:PostgresClient.Utils"
        mc:Ignorable="d"
        Title="MainWindow" Height="900"  Width="1500" Background="#282828">
    <Window.Resources>
        <src:InverseBooleanConverter x:Key="boolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="12*"/>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>



        <TabControl Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="Transparent" BorderThickness="0"  Padding="5"  >
            <TabItem Header="Выполнить комманду" >
                <Frame   Content="{Binding WorkFrame}"    BorderThickness="0"  />
            </TabItem>
            <TabItem Header="Вывести содержимое таблицы" IsEnabled="{Binding IsConnected}">
                <Frame   Content="{Binding TableViewerFrame}"    BorderThickness="0"  />
            </TabItem>
            <TabItem Header="Список функций" IsEnabled="{Binding IsConnected}">
                <Frame   Content="{Binding FuncFrame}"    BorderThickness="0"  />
            </TabItem>
        </TabControl>


        <GridSplitter Width="5" Margin="5" Grid.RowSpan="3" HorizontalAlignment="Center" Grid.Column="1"/>
        
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" >
                    <Button Content="Инициализировать соеденение" Margin="5"/>
                <Button Content="Закрыть сеанс связи" Margin="5"  IsEnabled="{Binding IsConnected}" Padding="5" Command="{Binding DisconnectClick}"/>
                </StackPanel>
            <GridSplitter Height="5" Padding="5" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Frame Padding="5" Grid.Row="2"  Content="{Binding SidePanel}" />

        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Column="1" Grid.Row="1" MaxHeight="40" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Canvas Width="100" Height="100">
                    <Ellipse  Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="25" Canvas.Top="25">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="Green"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="false">
                                        <Setter Property="Fill" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Canvas>
            </Viewbox>
            <Label  Grid.Row="2" Grid.Column="0" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Right" >
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Content" Value="Подключено"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsConnected}" Value="false">
                                <Setter Property="Content" Value="Не подключено"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </Grid>

    </Grid>

</Window>
